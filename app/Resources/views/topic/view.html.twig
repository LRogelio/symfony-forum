{% extends 'base.html.twig' %}

{% block content %}
    <div class="block">
        <a class="button is-primary" href="{{ path('topic_comment_add', { topic: topic.id }) }}">Add Message</a>
    </div>

    <table class="table is-bordered thread">
        <tbody>
        {% for comment in comments %}
            <tr>
               <td class="author">
                   Published at<br>
                   {{ comment.updatedAt|date('d/m/Y H:i') }}
               </td>
               <td class="content">
                   {{ comment.message }}
               </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% include 'partials/pagination.html.twig' with {
        paginator: comments,
        currentPage: currentPage,
        itemsPage: maxCommentsPage,
        uri: path('topic_view', { topic: topic.id }) ~ '?page='
    } only %}
{% endblock %}