{% extends 'base.html.twig' %}

{% set title = 'Forum' %}

{% block content %}
    <table class="table is-bordered category-list">
        <thead>
        <tr>
            <td>Category</td>
            <td>Last Comment</td>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}

            <tr>
                <td class="category">
                    <a href="{{ path('category_topics', { category: category.id }) }}">{{ category.name }}</a>
                    <div>{{ category.description }}</div>
                </td>
                <td class="last-comment">
                    {% if category.topicId %}
                        <a href="{{ path('topic_view', { topic: category.topicId }) }}">{{ category.topicTitle }}</a><br>
                        on {{ category.commentCreatedAt|date('d M Y H:i') }}
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}